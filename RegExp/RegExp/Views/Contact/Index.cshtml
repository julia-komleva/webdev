@model MessageModel
@{
    ViewData["Title"] = "Contact";
}

<h1>lab2</h1>

<form method="post" asp-action="Send">
    <div class="form-group">
        <input asp-for="From" type="email" placeholder="email" class="form-control" />
        <span asp-validation-for="From" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-for="Subject" type="text" class="form-control" placeholder="subject" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <textarea asp-for="Body" placeholder="body" class="form-control" style="min-height:100px;resize:vertical"></textarea><br />
        <span asp-validation-for="Body" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="send" name="send" class="btn btn-default" style="margin-bottom: 12px; width: 100%" />
    </div>

    @if (ViewBag.Success != null)
    {
        <div class="alert alert-success" role="alert">@Html.Raw(ViewBag.Success)</div>
        <img src="~/images/success.jpg" alt="success cat" />
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger" role="alert">@Html.Raw(ViewBag.Error)
        <img src="~/images/error.jpg" alt="sad cat" /></div>
        
    }
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

